{
  "name": "jake-river-rentals",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "postinstall": "run-p install:backend install:frontend",
    "install:backend": "cd backend/src && npm install",
    "install:frontend": "cd frontend && npm install",
    "start": "run-p start:backend start:frontend",
    "start:dev": "run-p start:backend:local start:frontend",
    "start:backend": "cd backend/src && npm run server",
    "start:backend:local": "cd backend/src && npm run server:local",
    "start:frontend": "cd frontend && npm start",
    "build": "run-p build:backend build:frontend",
    "build:backend": "cd backend/src && npm build",
    "build:frontend": "cd backend/frontend && npm build",
    "lint": "eslint backend/**"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^6.3.0"
  }
}
